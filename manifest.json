{
    "manifest_version": 3,
    "name": "Bazaar Tracker",
    "version": "1.0",
    "description": "Tracking your vocation in the server",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "alarms",
        "activeTab",
        "webRequest",
        "nativeMessaging"
    ]
  }
  